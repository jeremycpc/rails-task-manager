<h1>My tasks</h1>
<p>
  <% @tasks.each do |task| %>
    <br>
    <%= link_to "#{task.title}", task_path(task) %>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
      <% else %>
      <i class="far fa-square"></i>
      <% end %>
    <br>
    <%= link_to "Delete task", task_path(task),
    method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
  <br>
  <%= link_to "Create a new task", new_path %>


</p>
